{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "yevnet-dwdemo-adf"
		},
		"sqlLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'sqlLS'"
		},
		"synapseLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'synapseLS'"
		},
		"datalakeLS_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://yevnetdwstoreaccount.dfs.core.windows.net/"
		},
		"keyvaultLS_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://yevnet-KV.vault.azure.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "yevnet-dwdemo-adf_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"sqlLS_connectionString": {
						"value": "[parameters('sqlLS_connectionString')]"
					},
					"synapseLS_connectionString": {
						"value": "[parameters('synapseLS_connectionString')]"
					},
					"keyvaultLS_properties_typeProperties_baseUrl": {
						"value": "[parameters('keyvaultLS_properties_typeProperties_baseUrl')]"
					},
					"datalakeLS_properties_typeProperties_url": {
						"value": "[parameters('datalakeLS_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "yevnet-dwdemo-adf_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'yevnet-dwdemo-adf_ArmTemplate_0')]"
			]
		},
		{
			"name": "yevnet-dwdemo-adf_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'yevnet-dwdemo-adf_ArmTemplate_1')]"
			]
		}
	]
}